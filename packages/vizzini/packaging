set -e -x

export GOROOT=$(readlink -nf /var/vcap/packages/golang)
export PATH=${GOROOT}/bin:${PATH}

export GOPATH=$BOSH_INSTALL_TARGET

mkdir -p ${GOPATH}/src
cp -a . ${GOPATH}/src

cd ${GOPATH}/src/code.cloudfoundry.org/vizzini/

go install github.com/onsi/ginkgo/ginkgo

go test -c .

# clean up artifacts
rm *.test
rm -rf ${GOPATH}/pkg
